<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.frenchdj.media.center"
       name="Frenchdj Media Center"
       version="1.0"
       provider-name="frenchdj">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.requests" />
    <import addon="script.module.httplib2" />
    <import addon="script.module.youtube.dl" optional="true"/>
    <import addon="plugin.video.youtube" optional="true" />
    <import addon="script.module.urlresolver" optional="false"/>
    <import addon="script.module.simplejson" />    
     <import addon="script.module.livestreamer" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Frenchdj Media Center</summary>
    <description>Media Center pensado para o kodi com os seguintes addons: 
[B]Alive HD[/B] - Concertos e performances de Djs com Qualidade HD.
[B]PT.DocS.HD[/B] - Documentarios em [PT] e [BR] com qualidade HD.
[B]Jami[/B] - Videos Infantis em [PT] e [BR].
[B]Traquinas[/B] - Desenhos animados e filmes infantis em [PT] e [BR].

[B][COLOR lime] Aconselhado a ultima versao do YOUTUBE 5.2.* e o URL RESOLVER tem de estar ativo e atualizado no Kodi.[/COLOR][/B]</description>
    <platform>all</platform>
  </extension>
</addon>
